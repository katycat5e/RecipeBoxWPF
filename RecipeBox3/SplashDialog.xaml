<Window x:Name="window" x:Class="RecipeBox3.SplashDialog"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="StartupSplashDialog"
    Height="200" Width="400" ShowInTaskbar="False" WindowStartupLocation="CenterScreen" WindowStyle="None" Cursor="Wait" ResizeMode="NoResize"
    >
    <DockPanel LastChildFill="True">
        <DockPanel.Background>
            <SolidColorBrush Color="{StaticResource ColorSecondary1Light}"/>
        </DockPanel.Background>
        <Label Height="65" FontSize="13.8pt" FontFamily="Arial" TabIndex="0" DockPanel.Dock="Top" FontWeight="Bold">
            <Label.Background>
                <SolidColorBrush Color="{StaticResource ColorSecondary1Dark}"/>
            </Label.Background>
            Recipe Box
        </Label>
        <Label x:Name="VersionLabel" Height="33" DockPanel.Dock="Top"/>
        <Label x:Name="StatusLabel" DockPanel.Dock="Bottom" Content="{Binding StatusText, ElementName=window}"/>
    </DockPanel>

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
</Window>
