<UserControl x:Name="ThisControl" x:Class="RecipeBox3.Controls.DurationEntryBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeBox3.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="150" >
    <UserControl.Resources>
        <local:ValidValueBrushConverter
            x:Key="ValidBrushConverter"
            TrueColor="{Binding ValidColor, ElementName=ThisControl}"
            FalseColor="{Binding InvalidColor, ElementName=ThisControl}"/>
    </UserControl.Resources>

    <Grid>
        <TextBox x:Name="InputBox" LostFocus="InputBox_LostFocus" BorderThickness="1">
            <TextBox.BorderBrush>
                <SolidColorBrush Color="{Binding ValidInput, Converter={DynamicResource ValidBrushConverter}, ElementName=ThisControl, Mode=OneWay}" />
            </TextBox.BorderBrush>
        </TextBox>
    </Grid>
</UserControl>
